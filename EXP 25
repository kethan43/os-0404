#include <stdio.h>
#include <dirent.h>
#include <sys/stat.h>
#include <unistd.h>

int main() {
    struct stat s;
    stat("file.txt",&s);
    printf("File size: %ld\n",s.st_size);

    DIR *d = opendir(".");
    struct dirent *de;
    while((de=readdir(d))!=NULL)
        printf("%s\n",de->d_name);
    closedir(d);
}
