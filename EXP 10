#include <stdio.h>
#include <sys/ipc.h>
#include <sys/msg.h>

struct msg {
    long type;
    char text[100];
};

int main() {
    int msgid;
    struct msg m;

    msgid = msgget(IPC_PRIVATE, 0666 | IPC_CREAT);

    m.type = 1;
    printf("Enter message: ");
    gets(m.text);

    msgsnd(msgid, &m, sizeof(m.text), 0);
    msgrcv(msgid, &m, sizeof(m.text), 1, 0);

    printf("Received message: %s\n", m.text);

    msgctl(msgid, IPC_RMID, NULL);
    return 0;
}
