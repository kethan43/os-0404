#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>

int main() {
    int shmid;
    char *data;

    shmid = shmget(IPC_PRIVATE, 1024, 0666 | IPC_CREAT);
    data = (char *)shmat(shmid, NULL, 0);

    printf("Write data: ");
    gets(data);

    printf("Data read from shared memory: %s\n", data);

    shmdt(data);
    shmctl(shmid, IPC_RMID, NULL);
    return 0;
}
